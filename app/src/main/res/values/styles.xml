    <style name="Widget.App.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">#fff</item>
    </style>

    <style name="Widget.App.TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.TabLayout</item>
    </style>

    <style name="ThemeOverlay.App.TabLayout" parent="">
        <item name="colorPrimary">@color/colorPrimaryDark</item>
    </style>

    <style name="ProductName" parent="AppTheme">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:padding">2dp</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
    </style>

    <style name="ProductName2" parent="ProductName">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/color_gray</item>
        <item name="android:layout_marginTop">15dp</item>
    </style>

    <style name="GeneralTitle" parent="AppTheme">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/color_gray</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:gravity">right</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">20dp</item>

    </style>

    <style name="GeneralLable" parent="GeneralTitle">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:gravity">right</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingLeft">3dp</item>
    </style>

    <style name="GeneralDesc" parent="GeneralTitle">
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:gravity">fill_vertical</item>
        <item name="lineHeight">30sp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:layout_marginBottom">50dp</item>
    </style>

    <style name="ListProductName" parent="AppTheme">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">25dp</item>
    </style>

    <style name="ListProductName2" parent="ListProductName">
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">right</item>
        <item name="android:textColor">@color/color_gray</item>
        <item name="android:layout_marginTop">15dp</item>
    </style>

    <style name="ListProductLable" parent="ListProductName2">
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="ListProductName3" parent="ListProductName2">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_marginTop">25dp</item>
    </style>

    <style name="TitleCation" parent="AppTheme">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginRight">25dp</item>

    </style>

    <style name="TitleValue" parent="TitleCation">
        <item name="android:textColor">@color/color_gray</item>
        <item name="android:textStyle">italic</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>


</resources>

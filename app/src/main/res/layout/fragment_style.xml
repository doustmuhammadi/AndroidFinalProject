<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.SettingStyleFragment">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        app:cardElevation="2dp"
        app:strokeColor="@color/stroke_color"
        app:strokeWidth="1dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp">

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/swDefaultTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Default Theme" />

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/btnPicColor"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="@dimen/margin_top_et"
                android:layout_marginRight="20dp"
                android:text="Change Theme: "
                android:textSize="14sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnPicColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/swDefaultTheme"
                android:layout_gravity="center"
                android:layout_toRightOf="@id/tvTitle"
                android:text="Select" />


        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>
</FrameLayout>